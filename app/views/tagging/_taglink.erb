<%# don't know how to make form id uniq %>
<% tagtitle = tag.gsub(/^#/, '') + rand(1000000).to_s %>
<% form_tag("/issues?set_filter=1", :id => "tag-#{tagtitle}") do %>
  <%= hidden_field_tag 'project_id', project.id if project %>
  <%= hidden_field_tag 'fields[]', 'tags' %>
  <%= hidden_field_tag 'operators[tags]', '=' %>
  <%= hidden_field_tag 'values[tags][]', tag %>
  <% if defined?(status) %>
    <%= hidden_field_tag 'fields[]', 'status_id' %>
    <%= hidden_field_tag 'operators[status_id]', status %>
    <%= hidden_field_tag 'values[status_id][]', '1' %>
  <% end %>
  <%= link_to defined?(name) ? name : tag, 'javascript:void(0);',
    :onclick => "document.getElementById('tag-#{tagtitle}').submit()" %>
<% end %>